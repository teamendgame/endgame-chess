<h1 class="text-center"><%= @user.name %></h1>
<br />
<div class="center-block" id="scorecard">
  <header id="header">
    <h2 class="text-center">Your Scorecard:</h2>
  </header>
  <section id="body">
    <ul id="scores">
      <li>
        <div class="view">
          Wins: <span class="pull-right"><%= games_won? %></span>
        </div>
      </li>
      <li>
        <div class="view">
          Losses: <span class="pull-right"><%= games_lost? %></span>
        </div>
      </li>
      <li>
        <div class="view">
          Draws: <span class="pull-right"><%= games_draw? %></span>
        </div>
      </li>
    </ul>
  </section>
</div>
<br />
<hr />

<h2 class="text-center">Active Games:</h2>
  <ul>
  <% games_unfinished?.each do |game| %>
    <li><%= link_to game.name, game_path(game.id) %></li>
  <% end %>
  </ul>
