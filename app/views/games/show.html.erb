<h1 class="text-center"><%= @game.name %></h1>
<br/>
<table class="board">
  <% 8.times do |row| %>
    <%= '<tr>'.html_safe %>
    <% 8.times do |col| %>
      <%= '<td>'.html_safe + content_tag(:span, piece_present?(@pieces, @game, row, col), class: ["piece"]) + '</td>'.html_safe %>
    <% end %> 
  <% end %>
</table> 